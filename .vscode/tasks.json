{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "serve",
            "label": "serve",
            "isBackground": true,
            "problemMatcher": {
                "base": "$ts-webpack-watch",
                "background": {
                    "beginsPattern": "[a-z\\[\\] ]+ webpack is watching the files...\\s*",
                    "endsPattern": "[a-z\\[\\] ]+ Compilation\\s+finished\\s*"
                }
            },
            "presentation": {
                "echo": false,
                "panel": "shared"
            }
        },
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build"
        }
    ]
}
