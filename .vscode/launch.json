{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Functions",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "smartStep": true,
            "showAsyncStacks": true,
            "preLaunchTask": "func: host start",
            "protocol": "inspector",
            // timeout has to be longer to wait for webpack
            "timeout": 30000,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**",
            ]
        }
    ]
}
