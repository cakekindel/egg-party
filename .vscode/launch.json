{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server (Node)",
            "program": "${workspaceFolder}\\dist\\main.js",
            "preLaunchTask": "build",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**",
            ]
        },
        {
            "name": "Attach Serverless (Functions)",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "smartStep": true,
            "showAsyncStacks": true,
            "protocol": "inspector",
            "skipFiles": [
                "<node_internals>/**",
                "node_modules/**",
            ]
        }
    ]
}
