{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Serve",
            "args": [
                "./dist/main.js"
            ],
            "smartStep": true,
            "showAsyncStacks": true,
            "preLaunchTask": "serve:watch",
            "autoAttachChildProcesses": true,
            "skipFiles": [
                "<node_internals>/**/fs.js",
                "<node_internals>/**/loader.js",
                "<node_internals>/**/loaders.js",
                "<node_internals>/**/async_hooks.js",
                "node_modules/**/xpath.js",
            ]
        }
    ]
}
